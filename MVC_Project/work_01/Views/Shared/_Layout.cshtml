<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta name="author" content="Md. Arman Hossain" />
    <meta charset="utf-8" lang="en-us" />
    <meta name="description" content="Stock Mangement project with Asp.net MVC" />
    <title>@ViewBag.Title</title>
    @RenderSection("Style", required: false)

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />

    <style type="text/css">
        body {
            margin-top: 70px;
        }
    </style>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom fixed-top ">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">LOGO</a>
        <button class="navbar-toggler" type="button" data-bs-target="#menuBar" data-bs-toggle="collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        @*<button class="navbar-toggler" type="button" data-bs-target="collapse" data-bs-toggle="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>*@
    <div class="navbar-collapse collapse" id="menuBar">
        <ul class="navbar-nav">
            <li class="nav-item">
                @Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Item List", "Index", "Item", new { }, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Order List", "Index", "Order", new { }, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Order Details", "Index", "OrderDetail", new { }, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Transaction", "Index", "Transaction", new { }, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Category", "Index", "Category", new { }, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Report", "RestuarentReport", "Reports", new { }, new { @class = "nav-link" })
            </li>
        </ul>
        <ul class="nav navbar-nav ms-auto">
            @if (Request.IsAuthenticated)
            {
                <li>
                    @Html.ActionLink("Hello, " + User.Identity.Name + " !", "Index", "", new { @class = "nav-link" })
                </li>
                <li>
                    @Html.ActionLink("Logout", "Logout", "Account", new { }, new { @class = "nav-link" })
                </li>
            }
            else
            {
                <li class="active">
                    @Html.ActionLink("Register", "Register", "Account", new { }, new { @class = "nav-link" })
                </li>
                <li class="active">
                    @Html.ActionLink("Login", "LOgin", "Account", new { }, new { @class = "nav-link" })
                </li>
            }
        </ul>
    </div>
    </div>
</nav>

    <div class="container-fluid">
        @RenderBody()
    </div>

    <footer class="container-fluid">
        <p class="text-center">&copy;@DateTime.Now.Year-MVC-Project</p>
    </footer>

    @RenderSection("Scripts", required: false)
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</body>
</html>
