@model IEnumerable<work_01.Models.Item>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col">
        <h2>Item List</h2>
        <div class="d-flex justify-content-end">
            <a href="@Url.Action("Create","Item")" class="btn btn-primary btn-sm mb-2"><i class="bi bi-plus"></i> Add New</a>
        </div>
        <table class="table table-bordered table-striped table-sm table-hover">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(x => x.ItemName)</th>
                    <th>@Html.DisplayNameFor(x => x.ItemPrice)</th>
                    <th>@Html.DisplayNameFor(x => x.Quantity)</th>
                    <th>@Html.DisplayNameFor(x => x.Category)</th>
                    <th>@Html.DisplayNameFor(x => x.PurchaseDate)</th>
                    <th>@Html.DisplayNameFor(x => x.IsAvailable)</th>
                    <th>@Html.DisplayNameFor(x => x.ItemPicture)</th>
                    <th>...</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {
                <tr>
                    <td>@Html.DisplayFor(x => t.ItemName)</td>
                    <td>@Html.DisplayFor(x => t.ItemPrice)</td>
                    <td>@Html.DisplayFor(x => t.Quantity)</td>
                    <td>@Html.DisplayFor(x => t.ItemCategory.CategoryName)</td>
                    <td>@Html.DisplayFor(x => t.PurchaseDate)</td>
                    <td>@Html.DisplayFor(x => t.IsAvailable)</td>
                    <td>
                        <img src="@Url.Content(t.ItemPicture)" width="50" height="50" />
                    </td>


                    <td>
                        <a href="@Url.Action("Edit","Item",new { id=t.ItemId})" class="btn btn-success btn-sm"><i class="bi bi-pencil"></i> Edit</a>
                        <a href="@Url.Action("Delete","Item",new { id=t.ItemId})" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


